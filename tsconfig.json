{
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": ["@types"],
    "rootDirs": ["src", "src/**.stories.tsx", "src/**.spec.tsx"],
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["test-jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts"]
}
